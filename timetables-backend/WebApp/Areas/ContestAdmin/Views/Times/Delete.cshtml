@model App.BLL.DTO.Time

@{
    ViewData["Title"] = @App.Resources.Views.Shared._Layout.Time;
}

<h1 class="middle">@App.Resources.Views.Shared._Layout.Delete @App.Resources.Views.Shared._Layout.Time</h1>

<div>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <dl class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.From)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.From)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Until)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Until)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.TimeOfDay)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.TimeOfDay!.TimeOfDayName)
                        </dd>
                    </div>
                </div>
            </div>
        </dl>
        <input type="submit" value="@App.Resources.Views.Shared._Layout.Delete" class="btn btn-danger" /> |
        <a asp-action="Index">@App.Resources.Views.Shared._Layout.Back_To_List</a>
    </form>
</div>
