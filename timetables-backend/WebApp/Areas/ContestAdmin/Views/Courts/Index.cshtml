@model IEnumerable<App.BLL.DTO.Court>

@{
    ViewData["Title"] = App.Resources.Views.Shared._Layout.Courts;
}

<h1 class="middle">@App.Resources.Views.Shared._Layout.Courts</h1>

<p>
    <a class="display-6 text-dark" asp-action="Create">@App.Resources.Views.Shared._Layout.Create @App.Resources.Views.Shared._Layout.New</a>
</p>
<br/>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourtName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourtName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameType!.GameTypeName)
            </td>
            <td>
                            @Html.DisplayFor(modelItem => item.Location!.LocationName)
                        </td>
            <td class="text-end">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">@App.Resources.Views.Shared._Layout.Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">@App.Resources.Views.Shared._Layout.Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>