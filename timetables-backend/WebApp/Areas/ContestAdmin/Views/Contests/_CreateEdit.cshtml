@model WebApp.Areas.ContestAdmin.ViewModels.ContestCreateEditViewModel


<br/>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="mb-3 row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Contest.ContestName" class="control-label">@App.Resources.Domain.Contest.ContestName</label>
            <input asp-for="Contest.ContestName" class="form-control" required="required"/>
            <span asp-validation-for="Contest.ContestName" class="text-danger"></span>
        </div>
        <br/>
        <div class="form-group">
            <label asp-for="Contest.From" class="control-label">@App.Resources.Domain.Contest.From</label>
            <input asp-for="Contest.From" class="form-control" required="required"/>
            <span asp-validation-for="Contest.From" class="text-danger"></span>
        </div>
        <br/>
        <div class="form-group">
            <label asp-for="Contest.LocationId" class="control-label">@App.Resources.Domain.Contest.Location</label>
            <select required="required" asp-for="Contest.LocationId" class="form-control" asp-items="Model.LocationSelectList"></select>
        </div>
        <br/>
        <div class="form-group">
            @{
                if (Model.PreviousLevels != null)
                {
                    <label class="control-label">@App.Resources.Views.Shared._Layout.Levels</label>
                    <select multiple="multiple" asp-for="SelectedLevelIds" class="form-control" required="required">
                        @foreach (var level in Model.LevelSelectList!)
                        {
                            if (Model.PreviousLevels.Any(e => e.Id.ToString().Equals(level.Value)))
                            {
                                <option selected="selected" value="@level.Value">@level.Text</option>
                            }
                            else
                            {
                                <option value="@level.Value">@level.Text</option>
                            }
                        }
                    </select>
                }
                else
                {
                    <div class="form-group">
                        <label class="control-label">@App.Resources.Views.Shared._Layout.Levels</label>
                        <select required="required" asp-for="SelectedLevelIds" class="form-control" asp-items="Model.LevelSelectList" multiple="multiple"></select>
                    </div>
                }
            }
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Contest.Description" class="control-label">@App.Resources.Domain.Contest.Description</label>
            <input required="required" asp-for="Contest.Description" class="form-control"/>
            <span asp-validation-for="Contest.Description" class="text-danger"></span>
        </div>
        <br/>
        <div class="form-group">
            <label asp-for="Contest.Until" class="control-label">@App.Resources.Domain.Contest.Until</label>
            <input required="required" asp-for="Contest.Until" class="form-control"/>
            <span asp-validation-for="Contest.Until" class="text-danger"></span>
        </div>
        <br/>
        <div class="form-group">
            <label asp-for="Contest.ContestTypeId" class="control-label">@App.Resources.Views.Shared._Layout.ContestTypes</label>
            <select required="required" asp-for="Contest.ContestTypeId" class="form-control" asp-items="Model.ContestTypeSelectList"></select>
        </div>
        <br/>
        <div class="form-group">
            @{
            if (Model.PreviousPackages != null)
            {
            <label class="control-label">@App.Resources.Views.Shared._Layout.Packages</label>
            <select multiple="multiple" asp-for="SelectedPackagesIds" class="form-control" required="required">
                @foreach (var package in Model.PackagesSelectList!)
                {
                if (Model.PreviousPackages.Any(e => e.Id.ToString().Equals(package.Value)))
                {
                <option selected="selected" value="@package.Value">@package.Text</option>
                }
                else
                {
                <option value="@package.Value">@package.Text</option>
                }
                }
            </select>
            }
            else
            {
            <div class="form-group">
                <label class="control-label">@App.Resources.Views.Shared._Layout.Packages</label>
                <select required="required" asp-for="SelectedPackagesIds" class="form-control" asp-items="Model.PackagesSelectList" multiple="multiple"></select>
            </div>
            }
            }
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Contest.TotalHours" class="control-label">@App.Resources.Domain.Contest.TotalHours</label>
            <input required="required" asp-for="Contest.TotalHours" class="form-control"/>
            <span asp-validation-for="Contest.TotalHours" class="text-danger"></span>
        </div>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <div class="form-group">
            @{
            if (Model.PreviousTimes != null)
            {
            <label class="control-label">@App.Resources.Views.Shared._Layout.Times</label>
            <select multiple="multiple" asp-for="SelectedTimesIds" class="form-control" required="required">
                @foreach (var time in Model.TimesSelectList!)
                {
                if (Model.PreviousTimes.Any(e => e.Id.ToString().Equals(time.Value)))
                {
                <option selected="selected" value="@time.Value">@time.Text</option>
                }
                else
                {
                <option value="@time.Value">@time.Text</option>
                }
                }
            </select>
            }
            else
            {
            <div class="form-group">
                <label class="control-label">@App.Resources.Views.Shared._Layout.Times</label>
                <select required="required" asp-for="SelectedTimesIds" class="form-control" asp-items="Model.TimesSelectList" multiple="multiple"></select>
            </div>
            }
            }
        </div>
    </div>
</div>
<br/>
<br/>