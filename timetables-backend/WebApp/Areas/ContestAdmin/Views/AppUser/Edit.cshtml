@model WebApp.Areas.ContestAdmin.ViewModels.AppUserEditViewModel;

@{
    ViewData["Title"] = "Edit";
}

<h1 class="middle">Edit User's Role</h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="EditParticipant">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppUser.FirstName" class="control-label"></label>
                <input readonly="readonly" asp-for="AppUser.FirstName" class="form-control"/>
                <span asp-validation-for="AppUser.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.LastName" class="control-label"></label>
                <input readonly="readonly" asp-for="AppUser.LastName" class="form-control"/>
                <span asp-validation-for="AppUser.LastName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="AppUser.Id"/>
            <input type="hidden" asp-for="@Model.ContestId"/>
            <div class="form-group">
                <label asp-for="AppUser.UserName" class="control-label"></label>
                <input readonly="readonly" asp-for="AppUser.UserName" class="form-control"/>
                <span asp-validation-for="AppUser.UserName" class="text-danger"></span>
            </div>
            <label class="control-label">@App.Resources.Views.Shared._Layout.Role</label>
            <select asp-for="SelectedRoleId" class="form-control" asp-items="Model.RoleSelectList"></select>
            <br/>
            <div class="form-group">
                <input type="submit" value="@App.Resources.Views.Shared._Layout.Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@App.Resources.Views.Shared._Layout.Back_To_List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}