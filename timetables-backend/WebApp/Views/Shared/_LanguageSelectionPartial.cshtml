@using Microsoft.Extensions.Options
@inject IOptions<RequestLocalizationOptions> LocalizationOptions
@{
    var cultureItems = LocalizationOptions.Value.SupportedUICultures.Select(c =>
        new
        {
            Value = c.Name,
            Text = c.NativeName,
        });
}
<div class="dropdown d-inline">
    <a class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        @App.Resources.Views.Shared._Layout.Language
    </a>
    <ul class="dropdown-menu">
        @foreach (var item in cultureItems)
        {
        <li>
            <a class="dropdown-item nav-link text-dark" asp-area=""
               asp-controller="Contests"
               asp-action="SetLanguage"
               asp-route-culture="@item.Value"
               asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString">@item.Text
            </a>
        </li>
        }
    </ul>
</div>

